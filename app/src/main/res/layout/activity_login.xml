<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="40dp"
    android:background="@color/colorSkyBlue"
    android:onClick="onClick">

    <ImageView
        android:id="@+id/mImgIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_icon"/>
    <TextView
        android:id="@+id/mTexAppName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mImgIcon"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/mEdtUsername"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/mTexAppName"
        android:background="@drawable/sty_edt_white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_username"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/user_name"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorLightGray"
        android:cursorVisible="false"/>
    <EditText
        android:id="@+id/mEdtPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mEdtUsername"
        android:background="@drawable/sty_edt_white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_password"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="@string/pass_word"
        android:textColorHint="@color/colorLightGray"
        android:textColor="@color/colorBlack"/>
    <Button
        android:id="@+id/mBtnLogin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/mEdtPassword"
        android:background="@drawable/sty_btn_steelblue"
        android:text="@string/btn_login" />
    <Button
        android:id="@+id/mBtnRegister"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mBtnLogin"
        android:background="@drawable/sty_btn_babyblue"
        android:text="@string/btn_register"
        android:textColor="@color/colorSkyBlue" />
    <Button
        android:id="@+id/mBtnForget"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mBtnRegister"
        android:background="#00000000"
        android:gravity="center"
        android:textSize="12sp"
        android:text="@string/forget_pw" />
</RelativeLayout>